<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bottom_sheet_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:behavior_peekHeight="8dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible">

            <View
                android:layout_width="wrap_content"
                android:layout_height="12dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/icons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottomSheetTint"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/retract_drawer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_swipe_down_24dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:contentDescription="@string/description_icon"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_recent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_samsprung_24dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:contentDescription="@string/description_icon"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_home"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_home_24dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:contentDescription="@string/description_icon"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_baseline_arrow_back_24dp"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:contentDescription="@string/description_icon"/>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>