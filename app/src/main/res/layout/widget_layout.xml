<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.eightbitlab.blurview.BlurView
        android:id="@+id/blurContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        launcher:blurOverlayColor="@color/bottomSheetTint"
        android:clickable="true"
        android:focusable="true">

        <com.eightbit.samsprung.panels.DragLayer
            android:id="@+id/drag_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- The workspace contains 3 screens of cells -->
            <com.eightbit.samsprung.panels.Workspace
                android:id="@+id/workspace"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                launcher:defaultScreen="1">

                <include android:id="@+id/cell1" layout="@layout/workspace_screen" />
                <include android:id="@+id/cell2" layout="@layout/workspace_screen" />
                <include android:id="@+id/cell3" layout="@layout/workspace_screen" />
            </com.eightbit.samsprung.panels.Workspace>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/menu_zone"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_widgets_24"
                android:background="@drawable/delete_zone_selector"
                android:layout_marginTop="10dip"
                android:layout_gravity="end|top"
                launcher:direction="1"
                android:alpha=".6"/>

            <com.eightbit.samsprung.panels.DeleteZone
                android:id="@+id/delete_zone"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:scaleType="center"
                android:src="@drawable/ic_baseline_delete_forever_24"
                android:background="@drawable/delete_zone_selector"
                android:layout_marginBottom="10dip"
                android:layout_gravity="end|bottom"
                android:visibility="gone"
                launcher:direction="1"
                android:alpha=".6"/>

        </com.eightbit.samsprung.panels.DragLayer>

    </com.eightbitlab.blurview.BlurView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>