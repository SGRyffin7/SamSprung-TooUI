<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CoverPreferences">

    <com.eightbitlab.blurview.BlurView
        android:id="@+id/blurContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:blurOverlayColor="@color/backgroundBlack">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="0dp"
                android:background="@android:color/background_light" />

            <include layout="@layout/social_menu_bar" />

            <LinearLayout
                android:id="@+id/permissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/background_light"
                    android:paddingTop="4dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginStart="14dp"
                    android:textColor="?android:textColorPrimary"
                    android:gravity="center_vertical"
                    android:text="@string/permission_options" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/background_light"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/accessibility"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_accessibility" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/accessibility_switch"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:textSize="28sp"
                        android:textColor="?android:textColorPrimary"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/keyboard_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="UseCompoundDrawables"
                    android:enabled="false">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_keyboard" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/keyboard_button"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingStart="0dp"
                        android:paddingEnd="4dp"
                        app:srcCompat="@drawable/ic_baseline_keyboard_24"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/description_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_notifications" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/notifications_switch"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:textSize="28sp"
                        android:textColor="?android:textColorPrimary"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/usage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_usage" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/usage_button"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:paddingStart="0dp"
                        android:paddingEnd="4dp"
                        app:srcCompat="@drawable/ic_baseline_data_usage_24"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/description_icon"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="28sp"
                        android:textColor="?android:textColorPrimary"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:text="@string/permission_settings" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/settings_switch"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:textSize="28sp"
                        android:textColor="?android:textColorPrimary"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_light"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:id="@+id/updates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textSize="28sp"
                    android:textColor="?android:textColorPrimary"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="@string/updates_preference" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/updates_switch"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="28sp"
                    android:textColor="?android:textColorPrimary"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <include
                layout="@layout/toolbar_options"
                android:id="@+id/toolbar_options" />

            <ToggleButton
                android:id="@+id/swapViewType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_height_min"
                android:textOff="@string/swap_viewgrid"
                android:textOn="@string/swap_viewlist"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>

            <View
                android:id="@+id/color_composite"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp" />

            <include
                layout="@layout/color_panel"
                android:id="@+id/color_panel" />

            <View
                android:id="@+id/color_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/background_light"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <ListView
                android:id="@+id/app_toggle_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingStart="2dp"
                android:paddingEnd="0dp"
                android:layout_weight="1"
                android:dividerHeight="1dp"
                android:divider="?android:textColorPrimary"
                tools:listitem="@layout/filtered_apps_item"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </com.eightbitlab.blurview.BlurView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>