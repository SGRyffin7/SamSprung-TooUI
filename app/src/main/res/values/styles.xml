<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SlimButton" parent="Widget.AppCompat.Button.Small">
        <item name="android:minHeight">@dimen/button_height_min</item>
    </style>

    <style name="SlimPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:listPreferredItemHeightSmall">@dimen/button_height_min</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SlidingDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="CoreSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <!-- active thumb & track color -->
        <item name="colorControlActivated">#00FF00</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FF0000</item>
        <!-- inactive track color -->
        <item name="android:colorForeground">#FF0000
        </item>
    </style>

</resources>